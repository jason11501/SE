<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kehoach.KehoachFragment"
    android:padding="16dp"
    >

    <EditText
        android:id="@+id/edtThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Chọn Tháng"
        />
    <EditText
        android:id="@+id/edtNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Chọn Năm"
        />
    <EditText
        android:id="@+id/edtThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Nhập khoản thu dự kiến"
        />
    <EditText
        android:id="@+id/edtChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Nhập khoản chi dự kiến"
        />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="thêm"
        android:background="@drawable/custom_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_Kehoach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />




</LinearLayout>